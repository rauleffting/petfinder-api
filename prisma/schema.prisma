// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Organization {
  id            String   @id @default(uuid())
  name          String
  email         String   @unique
  password_hash String
  adress        String
  city          String
  state         String
  postal_code   String
  phone         String
  created_at    DateTime @default(now())

  @@map("orgs")
}
