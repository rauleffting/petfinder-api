{
  "openapi": "3.0.3",
  "info": {
    "title": "Petfinder API",
    "description": "Petfinder is a backend application that provides a RESTful API for pet adoption. It allows users to find pets by city, view their information, and contact the organization responsible for the pet.",
    "version": "1.0.0"
  },
  "paths": {
    "/signup": {
      "post": {
        "summary": "Sign up a new organization.",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  },
                  "address": {
                    "type": "string"
                  },
                  "city": {
                    "type": "string"
                  },
                  "state": {
                    "type": "string"
                  },
                  "postalCode": {
                    "type": "string"
                  },
                  "phone": {
                    "type": "string"
                  }
                },
                "required": [
                  "name",
                  "email",
                  "password",
                  "address",
                  "city",
                  "state",
                  "postalCode",
                  "phone"
                ]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Organization registered successfully."
          },
          "409": {
            "description": "Email already exists."
          }
        }
      }
    },
    "/signin": {
      "post": {
        "summary": "Signs in as an organization and returns an access token and refresh token.",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "email",
                  "password"
                ],
                "properties": {
                  "email": {
                    "type": "string",
                    "format": "email"
                  },
                  "password": {
                    "type": "string",
                    "minLength": 6
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful sign in.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "token": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid credentials!"
          }
        }
      }
    },
    "/token/refresh": {
      "patch": {
        "summary": "Refreshes the access token and refresh token.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Successful refresh.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "token": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/organizations/{organizationId}/register-pet": {
      "post": {
        "summary": "Registers a new pet.",
        "parameters": [
          {
            "name": "organizationId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "name",
                  "animalType",
                  "gender",
                  "size",
                  "age",
                  "breed"
                ],
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  },
                  "animalType": {
                    "type": "string",
                    "enum": [
                      "DOG",
                      "CAT"
                    ]
                  },
                  "gender": {
                    "type": "string",
                    "enum": [
                      "MALE",
                      "FEMALE"
                    ]
                  },
                  "size": {
                    "type": "string",
                    "enum": [
                      "SMALL",
                      "MEDIUM",
                      "BIG"
                    ]
                  },
                  "age": {
                    "type": "string"
                  },
                  "breed": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Pet registered successfully."
          },
          "409": {
            "description": "Pet with the same name and breed already exists."
          }
        }
      }
    },
    "/pets": {
      "get": {
        "summary": "Fetches pets by city and other criteria.",
        "parameters": [
          {
            "name": "city",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "page",
            "in": "query",
            "required": false,
            "schema": {
              "type": "integer",
              "minimum": 1
            },
            "default": 1
          },
          {
            "name": "animalType",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "enum": [
                "DOG",
                "CAT"
              ]
            }
          },
          {
            "name": "gender",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "enum": [
                "MALE",
                "FEMALE"
              ]
            }
          },
          {
            "name": "size",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "enum": [
                "SMALL",
                "MEDIUM",
                "BIG"
              ]
            }
          },
          {
            "name": "age",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "breed",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Pets fetched successfully.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "integer"
                      },
                      "name": {
                        "type": "string"
                      },
                      "description": {
                        "type": "string"
                      },
                      "animalType": {
                        "type": "string",
                        "enum": [
                          "DOG",
                          "CAT"
                        ]
                      },
                      "gender": {
                        "type": "string",
                        "enum": [
                          "MALE",
                          "FEMALE"
                        ]
                      },
                      "size": {
                        "type": "string",
                        "enum": [
                          "SMALL",
                          "MEDIUM",
                          "BIG"
                        ]
                      },
                      "age": {
                        "type": "string"
                      },
                      "breed": {
                        "type": "string"
                      },
                      "photos": {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "properties": {
                            "id": {
                              "type": "integer"
                            },
                            "url": {
                              "type": "string"
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "409": {
            "description": "An error occurred while fetching pets."
          }
        }
      }
    },
    "/pets/{petId}": {
      "get": {
        "summary": "Gets the details of a pet.",
        "parameters": [
          {
            "name": "petId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Pet details fetched successfully.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "integer"
                    },
                    "name": {
                      "type": "string"
                    },
                    "description": {
                      "type": "string"
                    },
                    "animalType": {
                      "type": "string",
                      "enum": [
                        "DOG",
                        "CAT"
                      ]
                    },
                    "gender": {
                      "type": "string",
                      "enum": [
                        "MALE",
                        "FEMALE"
                      ]
                    },
                    "size": {
                      "type": "string",
                      "enum": [
                        "SMALL",
                        "MEDIUM",
                        "BIG"
                      ]
                    },
                    "age": {
                      "type": "string"
                    },
                    "breed": {
                      "type": "string"
                    },
                    "photos": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "integer"
                          },
                          "url": {
                            "type": "string"
                          }
                        }
                      }
                    },
                    "organizationDetails": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "integer"
                        },
                        "name": {
                          "type": "string"
                        },
                        "description": {
                          "type": "string"
                        },
                        "email": {
                          "type": "string"
                        },
                        "phone": {
                          "type": "string"
                        },
                        "address": {
                          "type": "object",
                          "properties": {
                            "street": {
                              "type": "string"
                            },
                            "city": {
                              "type": "string"
                            },
                            "state": {
                              "type": "string"
                            },
                            "zipCode": {
                              "type": "string"
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "409": {
            "description": "An error occurred while fetching pet details."
          }
        }
      }
    },
    "/pets/{petId}/photos": {
      "post": {
        "summary": "Adds a photo to a pet.",
        "parameters": [
          {
            "name": "petId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "photo": {
                    "type": "file",
                    "required": true
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Photo added successfully."
          },
          "409": {
            "description": "An error occurred while adding the photo."
          }
        }
      }
    }
  }
}